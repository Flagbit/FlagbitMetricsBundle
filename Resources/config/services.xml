<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="flagbit_metrics.collector.class">Flagbit\Bundle\MetricsBundle\Collector\MetricsCollector</parameter>
        <parameter key="flagbit_metrics.factory.collector_collection.class">Flagbit\Bundle\MetricsBundle\Collector\Factory\CollectorCollectionFactory</parameter>
    </parameters>

    <services>
        <service id="flagbit_metrics.factory.collector_collection" class="%flagbit_metrics.factory.collector_collection.class%"/>

        <service id="flagbit_metrics.collector" class="%flagbit_metrics.collector.class%">
            <argument type="service" id="flagbit_metrics.factory.collector_collection" />
        </service>
    </services>
</container>
